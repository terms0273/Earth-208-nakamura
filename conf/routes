# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ViewPage.login()
GET     /index                      controllers.ViewPage.index()
GET     /register                   controllers.ViewPage.register()
GET     /edit                       controllers.ViewPage.edit()
GET     /userIndex                  controllers.ViewPage.userIndex()
POST    /doLogin                    controllers.Login.doLogin()
POST    /setSession                 controllers.Login.setSession()
POST    /logout                     controllers.Logout.logout()
POST    /clearSession               controllers.Logout.clearSession()
POST    /update                     controllers.Edit.update()
POST    /passwordUpdate             controllers.Edit.passwordUpdate()
POST    /create                     controllers.Create.create()
POST    /delete                     controllers.Delete.delete()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
