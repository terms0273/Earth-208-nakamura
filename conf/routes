# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login()
GET     /mainpage                   controllers.Application.index()
GET     /registerpage               controllers.Application.register()
GET     /editpage                   controllers.Application.edit()
GET     /indexpage                  controllers.Application.userIndex()
POST    /login                      controllers.Application.doLogin()
POST    /setSession                 controllers.Application.setSession()
POST    /clearSession               controllers.Application.clearSession()
POST    /update                     controllers.Application.update()
POST    /passwordUpdate             controllers.Application.passwordUpdate()
POST    /create                     controllers.Application.create()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
